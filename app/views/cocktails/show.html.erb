<div class="container">
<h1><%= @cocktail.name  %></h1>
<% @doses.each do |dose|  %>
  <%= dose.description  %> - <%= dose.ingredient.name  %>
  <%= button_to "Delete", cocktail_dose_path(dose), method: :delete, data: { confirm: 'Are you sure?', disable_with: 'deleting...' } %> <br>
<% end %>

<%= link_to 'Back', cocktails_path  %>
</div>


